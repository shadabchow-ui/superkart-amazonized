{
  "components/halothemes/options/swatch": "<div class=\"form-field\" data-product-attribute=\"swatch\">\n    <label class=\"form-label form-label--alternate form-label--inlineSmall\">\n        {{this.display_name}}\n        \n        <span data-option-value></span>\n        {{> components/common/requireness-msg}}\n    </label>\n\n    {{#each this.values}}\n        <input class=\"form-radio\" type=\"radio\" name=\"attribute[{{../id}}]\" value=\"{{id}}\" id=\"fbt_attribute_swatch_{{../id}}_{{id}}\" {{#if selected}}checked data-default{{/if}} {{#if ../required}}required{{/if}}>\n        <label class=\"form-option form-option-swatch{{#if data.[2]}} three-colors{{/if}}{{#if data.[1]}} two-colors{{/if}}\" for=\"fbt_attribute_swatch_{{../id}}_{{id}}\" data-product-attribute-value=\"{{id}}\" title=\"{{this.label}}\">\n            {{#if image}}\n                <span class='form-option-variant form-option-variant--pattern' title=\"{{this.label}}\" style=\"background-image: url('{{getImage image \"swatch_option_size\"}}');\"></span>\n            {{/if}}\n            {{#if data.[2]}}\n                <span class='form-option-variant form-option-variant--color form-option-variant--color2' title=\"{{this.label}}\" style=\"background: linear-gradient(to bottom, #{{data.[0]}} 33%, rgba(0, 0, 0, 0) 33%), linear-gradient(to bottom, #{{data.[1]}} 66%, #{{data.[2]}} 66%)\">\n                    <span style=\"background-color: #{{data.[0]}}\"></span>\n                    <span style=\"background-color: #{{data.[1]}}\"></span>\n                    <span style=\"background-color: #{{data.[2]}}\"></span>\n                </span>\n            {{else}}\n                {{#if data.[1]}}\n                    <span class='form-option-variant form-option-variant--color form-option-variant--color2' title=\"{{this.label}}\" style=\"background: linear-gradient(to bottom, #{{data.[0]}} 50%, #{{data.[1]}} 50%);\">\n                        <span style=\"background-color: #{{data.[0]}}\"></span>\n                        <span style=\"background-color: #{{data.[1]}}\"></span>\n                    </span>\n                {{else}}\n                    {{#if data.[0]}}\n                        <span class='form-option-variant form-option-variant--color' title=\"{{this.label}}\" style=\"background-color: #{{data.[0]}}\"></span>\n                    {{/if}}\n                {{/if}}\n            {{/if}}\n            {{#if pattern}}\n                <span class=\"form-option-expanded\">\n                    <span class=\"form-option-image\" style=\"background-image: url('{{getImage image 'core-swatch'}}');\"></span>\n                </span>\n            {{/if}}\n        </label>\n    {{/each}}\n</div>\n",
  "components/common/requireness-msg": "<small>\n    {{#if required}}\n    \t{{lang 'common.required2'}}\n    {{else}}\n    \t{{lang 'common.optional'}}\n    {{/if}}\n</small>\n"
}