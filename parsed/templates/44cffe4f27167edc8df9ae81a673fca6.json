{
  "components/halothemes/halo-notification-bar": "<div class=\"sticky-notification{{#unless theme_settings.halo_sticky_notification_bar_mobile}} hidden-mobile{{/unless}}{{#unless theme_settings.halo_sticky_notification_bar_mobile}} hidden-desktop{{/unless}}\" id=\"sticky-notification\">       \r\n    <span class=\"mobile-image-icon\"> \r\n        <img class=\"lazyload\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"https://cdn11.bigcommerce.com/s-3uw22zu194/images/stencil/original/image-manager/icon-hot.png\" alt=\"Icon Hot\">\r\n    </span>    \r\n    <div class=\"text-wrapper\" data-text-wrapper=\"\">\r\n        {{#if theme_settings.halo_intro_text_desktop '!=' ''}}\r\n        <div class=\"intro-text intro-text-desktop\">{{theme_settings.halo_intro_text_desktop}}</div>\r\n        {{/if}}\r\n        {{#if theme_settings.halo_intro_text_mb '!=' ''}}\r\n        <div class=\"intro-text intro-text-mobile\">{{theme_settings.halo_intro_text_mb}}</div>\r\n        {{/if}}\r\n        <a href=\"{{theme_settings.halo_sticky_notification_bar_link}}\" target=\"_blank\" data-main-link=\"\" \r\n        {{#if theme_settings.halo_sticky_notification_bar_layout_link '==' 'popup' }} data-popup{{/if}}>\r\n            {{#if theme_settings.halo_link_text_desktop '!=' ''}}                \r\n                <span class=\"link-text link-text-desktop\">\r\n                    <span class=\"text\">{{{theme_settings.halo_link_text_desktop}}}</span>\r\n                    <svg class=\"icon icon-link-arrow\"><use xlink:href=\"#icon-arrow-bar\"></use></svg>\r\n                </span> \r\n            {{/if}}\r\n            {{#if theme_settings.halo_link_text_mb '!=' ''}}\r\n                <span class=\"link-text link-text-mobile\">{{theme_settings.halo_link_text_mb}}</span>\r\n            {{/if}}\r\n        </a>\r\n    </div>\r\n        <span class=\"mobile-image-icon\"> \r\n            <img class=\"lazyload\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"https://cdn11.bigcommerce.com/s-3uw22zu194/images/stencil/original/image-manager/icon-hot.png\" alt=\"Icon Hot\">\r\n        </span>  \r\n    <span class=\"close-btn\" data-close-notification-btn=\"\">\r\n        <svg class=\"icon\"><use xlink:href=\"#icon-close-bar\"></use></svg>\r\n    </span>    \r\n</div>\r\n"
}