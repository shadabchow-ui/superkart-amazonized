{
  "components/halothemes/halo-recently-viewed-products": "{{#if theme_settings.halo_recently_viewed_products }}\r\n<section class=\"recently-viewed-products-sidebar\">\r\n    <div class=\"lst-seen-widget\">\r\n        <div class=\"collapse-icon\">\r\n            <svg class=\"icon\"><use xlink:href=\"#icon-double-arrow-right\"></use></svg>\r\n        </div>\r\n        {{#if theme_settings.recently_viewed_products_cart }}\r\n        <div class=\"top\">\r\n            <div role=\"link\" class=\"cart-icon with-products\" data-cart-preview2 aria-label=\"{{lang 'cart.nav_aria_label'}}\">\r\n                <svg class=\"icon\" aria-hidden=\"true\"><use xlink:href=\"#icon-cart\" /></svg>\r\n                <span class=\"cartCount cart-badge countPill cart-quantity\"></span>\r\n            </div>\r\n        </div>\r\n        {{/if}}\r\n        <div class=\"in-content\">\r\n            {{#if theme_settings.recently_viewed_products_title '!=' ''}}\r\n                <h3 class=\"title text-center no-product\">{{theme_settings.recently_viewed_products_title}}</h3>\r\n            {{/if}}\r\n            <div class=\"products-grid\" id=\"recently-viewed-products-list\">\r\n                <div class=\"no-products text-center\" style=\"flex-direction: column;display:none;\">\r\n                    <svg class=\"icon\"><use xlink:href=\"#icon-nopicture\"/></svg>\r\n                     <span class=\"text\">Sorry, there are no products.</span>\r\n                </div>\r\n            </div>\r\n            <div id=\"recently-viewed-products-list-tmp\" style=\"display: none !important;\"></div>\r\n        </div>\r\n        {{#if theme_settings.enable_back_to_top }}\r\n            <div class=\"backtoTop bottom\">\r\n                <svg class=\"icon\"><use xlink:href=\"#icon-arrow-top\"/></svg>\r\n                <span class=\"text\">Top</span>\r\n            </div>\r\n        {{/if}}\r\n    </div>\r\n    \r\n    <div class=\"wrap-icons\">\r\n        <div class=\"expand\"><svg class=\"icon\"><use xlink:href=\"#icon-expand\"/></svg></div>\r\n        {{#if theme_settings.enable_back_to_top }}\r\n            <div class=\"backtoTop\">\r\n                <span class=\"icon\">&uarr;</span>\r\n            </div>\r\n        {{/if}}\r\n    </div>\r\n</section>\r\n{{/if}}\r\n"
}