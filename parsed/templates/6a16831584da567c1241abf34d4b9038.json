{
  "components/carousel-content": "<div class=\"heroCarousel-content{{#unless show_background}} heroCarousel-content--empty{{/unless}} position-{{position}} slide-{{@index}}{{#or (if heading) (if text) (if button_text)}} has-content{{/or}}\">\n    {{#if heading}}\n    \t<span class=\"heroCarousel-title\">{{{heading}}}</span>\n    {{/if}}\n    {{#if text}}\t\n    \t<p class=\"heroCarousel-description\">{{{text}}}</p>\n    {{/if}}\n    {{#if button_text}}\n        <span aria-label=\"{{#if this.alt_text.length '!=' 0}}{{this.alt_text}}{{else}}{{lang 'carousel.slide_number' slide_number=(add @index 1)}}{{/if}}, {{button_text}}\" class=\"heroCarousel-action button button--primary button--large\">{{button_text}}</span>\n    {{/if}}\n</div>\n"
}